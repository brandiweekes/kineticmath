<UserControl x:Class="KineticMath.SubControls.Seesaw"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  d:DesignHeight="250" d:DesignWidth="400">
    <Canvas>
        <Canvas Width="320" Height="170" Canvas.Left="40" Canvas.Top="0" Name="uxBalanceCanvas" RenderTransformOrigin="0.5, 1">
            <Canvas.RenderTransform>
                <RotateTransform Angle="0" />
            </Canvas.RenderTransform>
            <Rectangle Width="320" Height="20" Fill="Orange" Canvas.Left="0" Name="uxBalanceRectangle" Canvas.Top="150" />
            <StackPanel Canvas.Left="5" Canvas.Top="0" Height="150" Name="leftBallPanel" Width="150" VerticalAlignment="Bottom" UseLayoutRounding="False" />
            <StackPanel Canvas.Left="165" Canvas.Top="0" Height="150" Name="rightBallPanel" Width="150" VerticalAlignment="Bottom" />
        </Canvas>
        <Polygon Points="1,0 2,2 0,2" Fill="Orange" Width="50" Height="50" Stretch="Fill" Stroke="Black" StrokeThickness="2" Canvas.Left="175" Canvas.Top="171" />
        
    </Canvas>
</UserControl>

<UserControl x:Class="KineticMath.SubControls.Seesaw"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  d:DesignHeight="250" d:DesignWidth="400">
    <Canvas>
        <Canvas Width="300" Height="75" Canvas.Left="50" Canvas.Top="95" Name="uxBalanceCanvas" RenderTransformOrigin="0.5, 1">
            <Canvas.RenderTransform>
                <RotateTransform Angle="0" />
            </Canvas.RenderTransform>
            <Rectangle Width="300" Height="20" Fill="Orange" Canvas.Left="0" Name="uxBalanceRectangle" Canvas.Top="55" />
            <StackPanel Canvas.Left="0" Canvas.Top="0" Height="50" Name="ballStackPanel" Width="300" DataContext="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" />
        </Canvas>
        <Polygon Points="1,0 2,2 0,2" Fill="Orange" Width="50" Height="50" Stretch="Fill" Stroke="Black" StrokeThickness="2" Canvas.Left="175" Canvas.Top="171" />
        
    </Canvas>
</UserControl>

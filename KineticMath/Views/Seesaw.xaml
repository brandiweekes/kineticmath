             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:KineticMath.Views"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <Canvas>
        <Canvas Width="500" Height="150" Canvas.Left="50" Name="uxBalanceCanvas" RenderTransformOrigin="0.5, 1">
            <Canvas.RenderTransform>
                <RotateTransform Angle="0" />
            </Canvas.RenderTransform>
            <Rectangle Width="500" Height="30" Fill="Orange" Canvas.Left="0" Name="uxBalanceRectangle" Canvas.Top="120" />
        </Canvas>
        <Polygon Points="1,0 2,2 0,2" Fill="Orange" Width="50" Height="50" Stretch="Fill" Stroke="Black" StrokeThickness="2" Canvas.Left="265" Canvas.Top="150" />
